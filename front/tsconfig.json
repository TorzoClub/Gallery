{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "rootDir": "src",
    "skipLibCheck": true,
    "baseUrl": "src",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings/index.d.ts"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
